@model CMSWebApp.Models.User

@{
    ViewData["Title"] = "Details";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">CMSWebApp/</span> Detail</h4>
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Detail</h5>

            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        @Html.DisplayNameFor(model => model.UserName)
                        <input asp-for="UserName" class="form-control" placeholder=@Html.DisplayFor(model => model.UserName) disabled />
                    </div>
                    <div class="mb-3">
                        @Html.DisplayNameFor(model => model.Password)
                        <input asp-for="Password" class="form-control" placeholder=@Html.DisplayFor(model => model.Password) disabled />
                    </div>
                    <div class="mb-3">
                        @Html.DisplayNameFor(model => model.Email)
                        <input asp-for="Email" class="form-control" placeholder=@Html.DisplayFor(model => model.Email) disabled />
                    </div>
                    <div class="mb-3">
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                        <input asp-for="PhoneNumber" class="form-control" placeholder=@Html.DisplayFor(model => model.PhoneNumber) disabled />
                    </div>
                    <div class="mb-3">
                        @Html.DisplayNameFor(model => model.Address)
                        <input asp-for="Address" class="form-control" placeholder=@Html.DisplayFor(model => model.Address) disabled />
                    </divAddress
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                </form>
            </div>
        </div>
    </div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>