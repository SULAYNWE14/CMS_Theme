@model CMSWebApp.Models.Content

@{
    ViewData["Title"] = "Delete";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">CMSWebApp/</span> Delete</h4>
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Are you sure you want to delete this?</h5>

            </div>
            <div class="card-body">
               
                    <div class="mb-3">
                        @Html.DisplayNameFor(model => model.Title)
                        <input asp-for="Title" class="form-control" placeholder=@Html.DisplayFor(model => model.Title) disabled />
                    </div>
                    <div class="mb-3">
                        @Html.DisplayNameFor(model => model.BodyText)
                        <input asp-for="BodyText" class="form-control" placeholder=@Html.DisplayFor(model => model.BodyText) disabled />
                    </div>

                    <div class="mb-3">
                        @Html.DisplayNameFor(model => model.CreationTime)
                        <input asp-for="CreationTime" class="form-control" placeholder=@Html.DisplayFor(model => model.CreationTime) disabled />

                    </div>
                    <form asp-action="Delete">
                         <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
            </div>
        </div>
    </div>

    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>